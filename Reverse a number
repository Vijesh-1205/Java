package com.vijesh;
import java.util.Scanner;
public class App {
    public static void main(String[] args) {
        int a = 0, b;
        System.out.print("Enter number: ");
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        
        while (n > 0) {
            b = n % 10;
            a = a * 10 + b;
            n = n / 10;
        }
        
        System.out.print("The reversed number is " + a);
        sc.close();
    }
}
